<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0e5df"
    android:orientation="vertical"
    tools:context=".Entidadesfinancieras">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_gallery"
                android:layout_width="288dp"
                android:layout_height="127dp"
                android:layout_gravity="right"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/times_new_roman"
                android:gravity="center|end"
                android:text="Entidades financieras"
                android:textColor="#000000"
                android:textSize="48sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.925"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.013"
                tools:text="Entidades financieras" />

            <ImageButton
                android:id="@+id/banco1"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.641"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_gravity="center"
                android:onClick="mostrarMapaLugar3"
                app:layout_constraintTop_toBottomOf="@+id/text_gallery"
                app:srcCompat="@drawable/fondo_bcp1" />

            <ImageButton
                android:id="@+id/banco2"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/fondo_union2_editado"
                tools:layout_editor_absoluteX="58dp"
                android:layout_gravity="center"
                android:onClick="mostrarMapaLugar4"
                tools:layout_editor_absoluteY="447dp" />

            <ImageButton
                android:id="@+id/banco3"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/fondo_bnb_exp"
                tools:layout_editor_absoluteX="58dp"
                android:onClick="mostrarMapaLugar5"
                tools:layout_editor_absoluteY="265dp" />

            <ImageButton
                android:id="@+id/banco4"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/fondo_economico_editado"
                tools:layout_editor_absoluteX="58dp"
                android:onClick="mostrarMapaLugar6"
                tools:layout_editor_absoluteY="358dp" />

            <ImageButton
                android:id="@+id/banco5"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/fondo_mercantil_editado"
                tools:layout_editor_absoluteX="58dp"
                android:onClick="mostrarMapaLugar1"
                tools:layout_editor_absoluteY="539dp" />

            <ImageButton
                android:id="@+id/banco6"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:onClick="mostrarMapaLugar2"
                app:srcCompat="@drawable/fondo_ganadero_edit3"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="629dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>